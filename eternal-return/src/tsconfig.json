{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "ES2017", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node", // Changed from "bundler" as it might be more appropriate outside Vite context
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true, // Keep consistent if potentially using a bundler later
    "noEmit": true // Assume no direct TS compilation needed here
  },
  "include": ["src/**/*", "eternal-return/src/store", "eternal-return/src/types", "eternal-return/src/hooks", "eternal-return/src/components"], // Include everything in the root src directory
  "exclude": ["node_modules", "eternal-return"] // Exclude node_modules and the sub-project
}
